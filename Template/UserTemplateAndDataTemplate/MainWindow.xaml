<Window x:Class="UserTemplateAndDataTemplate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserTemplateAndDataTemplate"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="610">
    <StackPanel Orientation="Horizontal" Margin="5">
        <local:CarDetailView x:Name="detailView" />
        <ListBox x:Name="lbxCars" Width="180" Margin="5,0"
                 SelectionChanged="lbxCars_SelectionChanged"/>
    </StackPanel>
</Window>
